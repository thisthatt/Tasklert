<!--form-->

    <div class="formsection shadow"> 
        <form class="taskform" id="task-form" method="POST" action="/api/v1/tasks/" onsubmit="createTask()">
       
        <label for="title">Task name</label>
        <input type="text" id="title" name="title">
        <label for="taskduration"></label>
        <input type="datetime-local" id="taskduration" name="taskduration">
        
        <button class="btn" type="submit" value="Submit" onsubmit="preventDefault()">Submit</button>
       
        </form>
        </div>

    <div class="tasklist shadow">
    <% for (var i = 0; i < alltasks.length; i++) { %>
        <div class="taskitem"><h2><%= alltasks[i].title %> </h2>
            <%= alltasks[i].completed %> 
            
            <button class="delbutton" onclick="deleteTask(this)" id="<%= alltasks[i]._id%>"> delete</button>
            
        </div>       
    <% } %>
    </div>
